<view class='projectbox'>
  <text class='headingtext'>Today</text>
  <!--第一部分  -->
  <view class='project' wx:for="{{goodslist}}" wx:key="index">
    <view bindtap='jumptodetail' data-index='{{index}}'>
      <image class='headimage' src='{{item.thumb_main}}'></image>
      <view class='projecttext'>
        <text class='biaoti'>{{item.goods_name}}</text>
        <text class='jianjie' space="emsp">价格：{{item.price}} 库存：{{item.storenum}}</text>
        <text class='field'>标签：{{item.tagname}}</text>
        <text class='commission'>佣金：{{item.commission}}</text>
      </view>
    </view>
    <view  wx:if="{{item.isadd==0}}">
        <image class="anniu1" src='/images/anniu.png' data-index='{{index}}' bindtap='addGoods'></image>
    </view>
    <!-- <view wx:elif="{{diao==15}}">还算是个中国人</view> -->
    <view wx:else><image  mode='aspectFill' class="anniu1" src='/images/add.png' data-index='{{index}}'></image></view>
  </view>

  <view>
    <image class="list_icon" src='/images/list.png'  bindtap='jumplist'></image>
  </view>

  
</view>